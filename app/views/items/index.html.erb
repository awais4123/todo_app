<div class="row flex-column mt-5">
  <div class="col-md-12 d-flex flex-column align-center">
    <div class="items">
      <%= link_to '<< Back', root_path, class: "back-button mb-3"%>
      <h4 class="mt-3"><%= @list.title %></h4>
      <ul class="list-style-none pt-20">
        <% @list.items.each do |item|%>
          <%= render partial: 'item_list', locals: {item: item} %>
        <%end%>
      </ul>
      <%= render 'form'%>
    </div>
  </div>
</div>

